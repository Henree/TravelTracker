<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/addClaimName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:text="Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/claimStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/addClaimName"
        android:ems="10"
        android:inputType="date"
        android:text="MM/DD/YYYY start" />

    <EditText
        android:id="@+id/addClaimFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/claimStartDate"
        android:ems="10"
        android:inputType="date"
        android:text="MM/DD/YYYY finish" />

    <Button
        android:id="@+id/addClaims"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addClaimFinish"
        android:layout_centerHorizontal="true"
        android:text="Add" />

</RelativeLayout>
